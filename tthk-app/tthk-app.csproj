    <Product>THK</Product>
    <Company>BredBrains</Company>
    <Authors>BredBrains</Authors>
    <Version>1.0.1</Version>
    <PackageIcon>tthklogoapp.png</PackageIcon>
    <Copyright>Nikolas Laus</Copyright>
