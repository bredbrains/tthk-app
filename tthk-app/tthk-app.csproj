      <PackageReference Include="Fizzler" Version="1.3.0-beta1"/>
      <PackageReference Include="HtmlAgilityPack" Version="1.11.24"/>
      <PackageReference Include="Xamarin.Forms" Version="4.8.0.1451"/>
