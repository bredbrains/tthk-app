<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    mc:Ignorable="d"
    x:Class="tthk_app.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Shell.TitleView>
        <StackLayout Orientation="Horizontal">
            <Image Source="tthklogo.png"
                   HorizontalOptions="Start"
                   VerticalOptions="FillAndExpand"
                   Margin="10"/>
            <Label Text="Tallinna Tööstushariduskeskus"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="White"
                   VerticalTextAlignment="Center"/>
        </StackLayout>
    </Shell.TitleView>

    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="info.png"
                     Clicked="InfoButton_Clicked"/>
    </ContentPage.ToolbarItems>
    <StackLayout>
        <Label x:Name="YourGroup"
               BackgroundColor="#A22538"
               TextColor="White"
               FontSize="Large"
               Padding="5,5,0,5"
               HorizontalOptions="FillAndExpand"
        />
        <Picker x:Name="GroupPicker"
                SelectedIndexChanged="Picker_OnSelectedIndexChanged"
                VerticalOptions="Center">
            <Picker.Items>
                <x:String>TARpv18</x:String>
                <x:String>TARpv19</x:String>
                <x:String>TARpv20</x:String>
                <x:String>LOGITpv18</x:String>
                <x:String>LOGITpv19</x:String>
                <x:String>LOGITpv20</x:String>
                <x:String>MEHpv19</x:String>
                <x:String>MEHpv20</x:String>
                <x:String>TITpv19</x:String>
                <x:String>TITpv20</x:String>
            </Picker.Items>
        </Picker>

        <ImageButton Source="telegram.png" HeightRequest="50" Clicked="TelegramButtonClick"/>
    </StackLayout>

</ContentPage>