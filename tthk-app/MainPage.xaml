<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    IconImageSource="tthklogo.png"
    Title="Tallinna Tööstushariduskeskus"
    mc:Ignorable="d"
    x:Class="tthk_app.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ContentPage.ToolbarItems>
        <ToolbarItem
            Clicked="InfoButton_Clicked"
            IconImageSource="info.png"
            x:Name="InfoButton" />
    </ContentPage.ToolbarItems>
    
    <StackLayout>
        <Label x:Name="YourGroup"
               BackgroundColor="#A22538"
               TextColor="White"
               FontSize="Large"
               Padding="5,5,0,5"
               HorizontalOptions="FillAndExpand"
        />
        <Picker x:Name="GroupPicker"
                SelectedIndexChanged="Picker_OnSelectedIndexChanged"
                VerticalOptions="Center">
            <Picker.Items>
                <x:String>TARpv18</x:String>
                <x:String>TARpv19</x:String>
                <x:String>TARpv20</x:String>
                <x:String>LOGITpv18</x:String>
                <x:String>LOGITpv19</x:String>
                <x:String>LOGITpv20</x:String>
                <x:String>MEHpv19</x:String>
                <x:String>MEHpv20</x:String>
                <x:String>TITpv19</x:String>
                <x:String>TITpv20</x:String>
            </Picker.Items>
        </Picker>
    </StackLayout>

</ContentPage>